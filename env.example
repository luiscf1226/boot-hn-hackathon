# Application settings
APP_NAME=AI Coding Agent
APP_VERSION=1.0.0
DEBUG=True
HOST=localhost
PORT=8000

# Database
DATABASE_URL=sqlite:///./app.db
DATABASE_ECHO=False

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Configuration (Local)
AI_MODEL_NAME=gemini-pro
AI_API_URL=http://localhost:8080
AI_API_KEY=your-local-ai-api-key
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Textual UI settings
UI_THEME=dark
UI_AUTO_REFRESH=True

# Agent settings
AGENT_NAME=CodeAssistant
AGENT_MAX_CONTEXT_LENGTH=8192
AGENT_MEMORY_SIZE=1000

# File operations
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.py,.js,.ts,.html,.css,.json,.md,.txt,.yaml,.yml
WORKSPACE_PATH=./workspace

# Command execution
COMMAND_TIMEOUT_SECONDS=300
MAX_CONCURRENT_COMMANDS=5
